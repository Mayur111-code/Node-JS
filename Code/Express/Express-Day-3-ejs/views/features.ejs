            background-color: #f8f9fa;
            padding: 5rem 2rem;
        }

        .detailed-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .feature-detail {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 3rem;
            align-items: center;
            margin-bottom: 5rem;
        }

        .feature-detail:nth-child(even) .feature-content {
            order: 2;
        }

        .feature-detail:nth-child(even) .feature-visual {
