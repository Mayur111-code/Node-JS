            .nav-links {
                display: none;
                flex-direction: column;
                position: absolute;
                top: 100%;
                left: 0;
                width: 100%;
                background-color: var(--secondary);
                padding: 1rem 0;
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            }

            .nav-links.active {
                display: flex;
            }

            .nav-links li {
                margin: 0.5rem 2rem;
            }

            .menu-toggle {
                display: block;
            }

            .about-hero h1 {
                font-size: 2.5rem;
            }

            .about-grid {
                grid-template-columns: 1fr;
            }

            .about-text {
                padding-right: 0;
            }

            .timeline-container::before {
                left: 20px;
            }

            .timeline-item {
                flex-direction: row !important;
            }

            .timeline-content {
                width: calc(100% - 60px);
                margin-left: 60px !important;
            }

            .timeline-marker {
                left: 20px;
            }

            .btn {
                display: block;
                margin: 1rem auto;
                width: 80%;
            }

            .btn-outline {
                margin-left: 0;
            }
        }
    </style>
</head>
