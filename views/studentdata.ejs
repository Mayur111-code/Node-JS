<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Data</title>
    <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }
      th, td {
        border: 1px solid #ccc;
        text-align: center;
        padding: 10px;
      }
      th {
        background-color: #f4f4f4;
      }
      button {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      .edit-btn {
        background-color: #4CAF50;
        color: white;
      }
      .delete-btn {
        background-color: #f44336;
        color: white;
      }
    </style>
  </head>
  <body>
    <h2>All Registered Students</h2>

    <table>
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <th>Contact Number</th>
          <th>Course</th>
          <th>Batch Code</th>
          <th>Remarks</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% if (data && data.length > 0) { %>
          <% data.map((student) => { %>
            <tr>
              <td><%= student.FullName %></td>
              <td><%= student.Email %></td>
              <td><%= student.ContactNumber %></td>
              <td><%= student.Course %></td>
              <td><%= student.BatchCode %></td>
              <td><%= student.Remarks %></td>

              <!-- Edit Button -->
              <td>
                <a href="/edit/<%= student._id %>">
                  <button class="edit-btn">Edit</button>
                </a>
              </td>

              <!-- Delete Button -->
              <td>
                <form action="/delete/<%= student._id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="8" style="text-align:center;">No records found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
